@model CompanyVModel

@{
    Layout = "~/Areas/Dashboard/Views/Shared/_Dashboard.cshtml";
    ViewData["Title"] = "Create";
}


<div class="card-body offset-md-2 col-md-8 ">
    <form role="form" asp-action="Create" method="post" enctype="multipart/form-data">

        <label>الاضافة</label>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">

            <input class="form-control" type="hidden" readonly asp-for="Id" placeholder="ID" name="Id" value="@Model.Id" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div class="mb-3">

            <input class="form-control" type="text" asp-for="Name" placeholder="Name" name="Name" value="@Model.Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>


        <div class="mb-3">

            <input class="form-control" type="text" asp-for="Position" placeholder="Position" name="Position" value="@Model.Position" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>

        <div class="mb-3">

            <input class="form-control" type="text" asp-for="AboutJob" placeholder="AboutJob" name="AboutJob" value="@Model.AboutJob" />
            <span asp-validation-for="AboutJob" class="text-danger"></span>
        </div>

        <div class="mb-3">

            <input class="form-control" type="date" asp-for="StartDate" placeholder="StartDate" name="StartDate" value="@Model.StartDate" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="mb-3">

            <input class="form-control" type="date" asp-for="EndDate" placeholder="EndDate" name="EndDate" value="@Model.EndDate" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="mb-3">

            <input class="form-control" type="text" asp-for="About" placeholder="About" name="About" value="@Model.About" />
            <span asp-validation-for="About" class="text-danger"></span>
        </div>


        <div class="text-center">

            <button type="submit" name="Edit" class="btn bg-gradient-info w-100 mt-4 mb-0"> اضافة </button>


        </div>

    </form>

</div>

