@model SocialVModel

@{
    Layout = "~/Areas/Dashboard/Views/Shared/_Dashboard.cshtml";
  //  ViewData["Title"] = "Create";
}


<div class="card-body offset-md-2 col-md-8 ">
    <form role="form" asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()    
        <label>الاضافة</label>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">

            <input class="form-control" type="hidden" readonly asp-for="Id" placeholder="ID" name="Id" value="@Model.Id" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div class="mb-3">

            <input class="form-control" type="text" asp-for="Name" placeholder="Name" name="name" value="@Model.Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>    

        <div class="mb-3">

            <input class="form-control" type="text" asp-for="Url" placeholder="Url" name="Url" value="@Model.Url" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label>الصورة</label>
            <input type="hidden" asp-for="Icon" />
            <input class="form-control" type="file" asp-for="IconFile" placeholder="ImageUrl" name="IconFile" />
            <span asp-validation-for="IconFile" class="text-danger"></span>
            <img src="~/FilesStorage/@Model.Icon" alt="Alternate Text" />

        </div>


        <div class="text-center">

            <button type="submit" name="Edit" class="btn bg-gradient-info w-100 mt-4 mb-0"> اضافة </button>


        </div>

    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}