@model CustomerVModel

@{
    Layout = "~/Areas/Dashboard/Views/Shared/_Dashboard.cshtml";
    ViewData["Title"] = "Edit";
}


<div class ="card-body offset-md-2 col-md-8 ">
    <form role="form" asp-action="Update" method="post" enctype="multipart/form-data">

        <label>التعديل</label>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">

            <input class="form-control" type="hidden" readonly asp-for="Id" placeholder="ID" name="Id" value="@Model.Id" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div class="mb-3" >

            <input class="form-control" type="text" asp-for="Name" placeholder="Name" name="Name" value="@Model.Name" />
    <span asp-validation-for="Name" class="text-danger" ></span>
        </div>


        <div class="mb-3">

            <input class="form-control" type="text" asp-for="About" placeholder="About" name="About" value="@Model.About" />
            <span asp-validation-for="About" class="text-danger"></span>
        </div>

        <div class="mb-3">

            <input class="form-control" type="text" asp-for="Description" placeholder="Description" name="Description" value="@Model.Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

      

        <div class="text-center"> 
            
            <button type="submit" name="Edit" class="btn bg-gradient-info w-100 mt-4 mb-0"> تعديل </button>


        </div>

    </form>

</div>   

